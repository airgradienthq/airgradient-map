<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.AGMap" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/agmap_primary</item>
        <item name="colorPrimaryDark">@color/agmap_primary</item>
        <item name="colorAccent">@color/agmap_accent</item>
        <item name="android:statusBarColor">@color/agmap_primary</item>
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_empty_icon</item>
    </style>

    <style name="Theme.AGMap" parent="Base.Theme.AGMap" />

    <!-- Dedicated theme for offscreen share card rendering -->
    <style name="Theme.AGMap.ShareCard" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/agmap_primary</item>
        <item name="colorSecondary">@color/agmap_accent</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>
</resources>
