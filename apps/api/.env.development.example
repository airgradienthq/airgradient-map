# Database connection settings
DATABASE_HOST=postgrex
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=agmap

# Map clustering configuration
MAP_CLUSTER_MIN_POINTS=2
MAP_CLUSTER_RADIUS=80
MAP_CLUSTER_MAX_ZOOM=8

# External API key for OpenAQ service
API_KEY_OPENAQ=randomapikeystring

# NASA FIRMS API key for wildfire data
FIRMS_API_KEY=your-firms-api-key-here

# OneSignal push notification settings
ONESIGNAL_APP_ID=your-onesignal-app-id-here
ONESIGNAL_API_KEY=your-onesignal-api-key-here
ONESIGNAL_ANDROID_CHANNEL_ID=your-android-channel-id-here

# Backend server settings
PORT=3001

# Docker image tags for deployment
# Staging: uses the deployed commit hash
# Production: uses the Git tag version
IMAGE_TAG=latest